<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.watchingy.model.UserInfo">

    <!--记得加@parm-->
    <select id="findByUidAndClassId" resultType="com.watchingy.model.StudentAppInfo">
        SELECT * FROM studentAppInfo WHERE uid=#{uid} AND classId=#{classId}
    </select>

    <select id="findBySid" resultType="String">
        SELECT appInfoList FROM studentAppInfo WHERE sid=#{sid}
    </select>
    
    <select id="findByClassId" parameterType="int" resultType="com.watchingy.vo.StudentAppInfoVo">
        SELECT trueName,schoolId,appInfo FROM studentAppInfo WHERE classId=#{classId}
    </select>

    <!--插入的时候把list转为string-->
    <insert id="add" parameterType="com.watchingy.model.StudentAppInfo">
        INSERT INTO studentAppInfo(uid,classId,trueName,schoolId,appInfoList) VALUE(#{uid},#{classId},#{trueName},#{schoolId},#{appInfoList})
    </insert>




</mapper>