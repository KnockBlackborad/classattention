<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.watchingy.model.UserInfo">

   <insert id="add" parameterType="com.watchingy.model.StudentQuestion">
       INSERT INTO studentQuestion(title,content,reply,publicOrNot,classId) VALUE (#{title},#{content},#{reply},#{publicOrNot},#{classId})
   </insert>

    <select id="findByUid" parameterType="com.watchingy.model.StudentQuestion">
        SELECT * FROM studentQuestion WHERE classId=#{classId}
    </select>


</mapper>